<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@id/member_pay_layout"
        android:layout_width="@dimen/space_420px"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@id/iv_dia_pay_top"
                android:layout_width="fill_parent"
                android:layout_height="200.0dip"
                android:background="@drawable/p_top3"
                android:scaleType="fitXY" />

            <ImageButton
                android:id="@id/ib_vip_exit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5.0dip"
                android:layout_marginTop="5.0dip"
                android:background="@drawable/pay_dialog_close_selector" />
        </RelativeLayout>

        <LinearLayout
            android:id="@id/dialog_ll_top"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/dialog_pay_back"
            android:orientation="vertical">

            <LinearLayout
                android:id="@id/dialog_ll_bottom"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:id="@id/pay_ll_gold"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="5.0dip"
                            android:paddingTop="5.0dip">

                            <RadioButton
                                android:id="@id/rb_gold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="15.0dip"
                                android:layout_marginRight="10.0dip"
                                android:background="@drawable/dia_money_selecor"
                                android:button="@null"
                                android:checked="true" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="2.0dip"
                                android:layout_toRightOf="@id/rb_gold"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@id/tv_gold"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="开通黄金会员"
                                    android:textColor="#ff000000"
                                    android:textSize="18.0sp" />

                                <TextView
                                    android:id="@id/tv_desc"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5.0dip"
                                    android:text="约上百部成人大片永久体验权限"
                                    android:textColor="#ff8c8c8c"
                                    android:textSize="14.0sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="10.0dip"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@id/tv_money_gold"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="¥18.00"
                                    android:textColor="#ff000000"
                                    android:textSize="18.0sp" />

                                <TextView
                                    android:id="@id/tv_money_gold_false"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="right"
                                    android:layout_marginTop="5.0dip"
                                    android:text="¥36.00"
                                    android:textColor="#ff8c8c8c"
                                    android:textSize="14.0sp" />
                            </LinearLayout>
                        </RelativeLayout>

                        <View
                            android:id="@id/dia_view_serp"
                            android:layout_width="fill_parent"
                            android:layout_height="1.0dip"
                            android:layout_marginLeft="20.0dip"
                            android:layout_marginRight="20.0dip"
                            android:background="#ffb1b1b1"
                            android:visibility="gone" />

                        <RelativeLayout
                            android:id="@id/pay_ll_dimaond"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="8.0dip"
                            android:paddingTop="8.0dip"
                            android:visibility="gone">

                            <RadioButton
                                android:id="@id/rb_diamond"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="15.0dip"
                                android:layout_marginRight="10.0dip"
                                android:background="@drawable/dia_money_selecor"
                                android:button="@null" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="5.0dip"
                                android:layout_toRightOf="@id/rb_diamond"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@id/tv_diamond"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="钻石会员"
                                    android:textColor="#ff000000"
                                    android:textSize="18.0sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5.0dip"
                                    android:text="海量成人大片无限看(定期更新)"
                                    android:textColor="#ff8c8c8c"
                                    android:textSize="14.0sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="10.0dip"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@id/tv_money_diamond"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="¥28.00"
                                    android:textColor="#ff000000"
                                    android:textSize="18.0sp" />

                                <TextView
                                    android:id="@id/tv_money_diamond_false"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="right"
                                    android:layout_marginTop="5.0dip"
                                    android:text="¥56.00"
                                    android:textColor="#ff8c8c8c"
                                    android:textSize="14.0sp" />
                            </LinearLayout>
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@id/dialog_btn_pay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10.0dip"
                android:layout_marginTop="5.0dip"
                android:background="@drawable/dialog_pay_confirm_button"
                android:gravity="center_vertical"
                android:onClick="gotoPay"
                android:paddingBottom="5.0dip"
                android:paddingLeft="40.0dip"
                android:paddingRight="40.0dip"
                android:paddingTop="5.0dip"
                android:text="立即开通"
                android:textColor="@android:color/white"
                android:textSize="20.0sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@id/pay_exit_layout"
        android:layout_width="@dimen/space_420px"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@id/exit_relative"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <ImageView
                android:id="@id/exit_activity_pay_top"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/p_exit_top" />

            <ImageView
                android:id="@id/exit_iv_exit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/p_exit_exit" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/space_90px"
                android:orientation="vertical">

                <TextView
                    android:id="@id/exit_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:text="28元"
                    android:textColor="#fff80000"
                    android:textSize="20.0sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10.0dip"
                    android:gravity="center_horizontal"
                    android:text="终身会员"
                    android:textColor="#fff80000"
                    android:textSize="18.0sp" />
            </LinearLayout>
        </RelativeLayout>

        <ImageView
            android:id="@id/exit_activity_pay_button"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20.0dip"
            android:adjustViewBounds="true"
            android:scaleType="center"
            android:src="@drawable/p_exit_button" />
    </LinearLayout>
</RelativeLayout>