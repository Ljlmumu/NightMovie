<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#eeeeee"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/pay_member_bg"
            android:layout_width="wrap_content"
            android:layout_height="270dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/p_top1" />


        <TextView
            android:id="@+id/tv_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pay_member_bg"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:text="开通永久会员"
            android:textColor="@color/Black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/tv_tip"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:text="￥39.00"
            android:textColor="@color/Black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_shuoming"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_tip"
            android:layout_marginLeft="10dp"
            android:text="海量成人视频永久观看权限"
            android:textColor="@color/advice_text_color" />

        <TextView
            android:id="@+id/tv_dele_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/tv_shuoming"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:text="￥78.00"
            android:textColor="@color/advice_text_color" />

        <TextView
            android:id="@+id/btn_goPay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_shuoming"
            android:layout_centerHorizontal="true"
            android:layout_margin="5dp"
            android:background="#22bb22"
            android:paddingBottom="7dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="7dp"
            android:text="立即开通"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/member_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/btn_close"

            />
    </RelativeLayout>


</RelativeLayout>
