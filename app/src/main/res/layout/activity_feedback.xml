<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/LinearLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffffff"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/main_title"
        android:background="#ff222222">

        <ImageView
            android:id="@id/close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tV"
            android:layout_alignTop="@id/tV"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20.0dip"
            android:src="@drawable/software_close" />

        <TextView
            android:id="@id/tV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="意见反馈"
            android:textColor="#ffffffff"
            android:textSize="@dimen/my_title_text" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="10.0dip"
        android:background="#ffd4d4d4" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/main_title">

        <LinearLayout
            android:id="@+id/linLay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="付费问题请联系客服QQ:"
                android:textColor="#ff080808" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15.0dip"
                android:text="2212426276"
                android:textColor="#fffe6300" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0dip"
            android:layout_alignParentBottom="true"
            android:background="#ffd9d9d9" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="10.0dip"
        android:background="#ffd4d4d4" />

    <RelativeLayout
        android:id="@+id/RelativeLayout1"
        android:layout_width="fill_parent"
        android:layout_height="40.0dip">

        <TextView
            android:id="@id/tV2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10.0dip"
            android:text="投诉类型:"
            android:textColor="#ff080808"
            android:textSize="15.0sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <RadioGroup
            android:id="@+id/rGroup_A"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="center">

            <RadioButton
                android:id="@+id/rButton_A_A"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:button="@drawable/feedback_radiobt"
                android:checked="true"
                android:drawableLeft="@drawable/feedback_radiobt"
                android:drawablePadding="15.0dip"
                android:text="付费问题"
                android:textColor="#ff080808" />

            <RadioButton
                android:id="@+id/rButton_A_B"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20.0dip"
                android:background="@null"
                android:button="@drawable/feedback_radiobt"
                android:drawableLeft="@drawable/feedback_radiobt"
                android:drawablePadding="15.0dip"
                android:text="无法播放"
                android:textColor="#ff080808" />
        </RadioGroup>

        <RadioGroup
            android:id="@+id/rGroup_B"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="center">

            <RadioButton
                android:id="@+id/rButton_B_A"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:button="@drawable/feedback_radiobt"
                android:drawableLeft="@drawable/feedback_radiobt"
                android:drawablePadding="15.0dip"
                android:text="强制关闭"
                android:textColor="#ff080808" />

            <RadioButton
                android:id="@+id/rButton_B_B"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20.0dip"
                android:background="@null"
                android:button="@drawable/feedback_radiobt"
                android:drawableLeft="@drawable/feedback_radiobt"
                android:drawablePadding="15.0dip"
                android:text="播放卡顿"
                android:textColor="#ff080808" />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <RadioGroup
            android:id="@+id/rGroup_C"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_marginTop="5.0dip"
            android:layout_weight="1.0"
            android:gravity="center"
            android:padding="15.0dip">

            <RadioButton
                android:id="@+id/rButton_C_A"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:button="@drawable/feedback_radiobt"
                android:drawableLeft="@drawable/feedback_radiobt"
                android:drawablePadding="15.0dip"
                android:text="其他问题"
                android:textColor="#ff080808" />
        </RadioGroup>

        <RadioGroup
            android:id="@+id/er_group3"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="center" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="10.0dip"
        android:background="#ffd4d4d4" />

    <RelativeLayout
        android:id="@+id/RelativeLayout2"
        android:layout_width="fill_parent"
        android:layout_height="40.0dip">

        <TextView
            android:id="@+id/tV3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10.0dip"
            android:text="意见建议:"
            android:textColor="#ff080808"
            android:textSize="15.0sp" />
    </RelativeLayout>

    <com.yifu.wuliao.view.MyEditText
        android:id="@+id/mET"
        android:layout_width="fill_parent"
        android:layout_height="50.0dip"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="15.0dip"
        android:layout_marginRight="15.0dip"
        android:background="@null"
        android:cursorVisible="true"
        android:ems="10"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="top"
        android:maxLength="100"
        android:text="请给出您的建议，限100字"
        android:textColor="#ff969696"
        android:textSize="15.0sp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="10.0dip"
        android:background="#ffd4d4d4" />

    <RelativeLayout
        android:id="@+id/RelativeLayout3"
        android:layout_width="fill_parent"
        android:layout_height="40.0dip">

        <TextView
            android:id="@+id/tV4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10.0dip"
            android:text="联系方式:"
            android:textColor="#ff080808"
            android:textSize="15.0sp" />
    </RelativeLayout>

    <EditText
        android:id="@+id/eT"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="5.0dip"
        android:layout_marginLeft="15.0dip"
        android:layout_marginRight="15.0dip"
        android:background="@null"
        android:cursorVisible="true"
        android:ems="10"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="top"
        android:inputType="number"
        android:maxLength="11"
        android:text="手机号码或QQ号码"
        android:textColor="#ff969696"
        android:textSize="15.0sp" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_weight="1.0"
        android:background="#ffdddddd">

        <ImageView
            android:id="@+id/submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="20.0dip"
            android:layout_marginLeft="40.0dip"
            android:layout_marginRight="40.0dip"
            android:src="@drawable/feedbcak_submit" />
    </RelativeLayout>
</LinearLayout>